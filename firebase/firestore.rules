rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{document} {
      allow create: if request.auth.uid == document;
      allow read: if request.auth.uid == document;
      allow write: if request.auth.uid == document;
      allow delete: if false;
    }

    match /leads/{document} {
      allow create: if request.resource.data.lead_collected_by == /databases/$(database)/documents/users/$(request.auth.uid);
      allow read: if true;
      allow write: if resource.data.lead_collected_by == /databases/$(database)/documents/users/$(request.auth.uid);
      allow delete: if resource.data.lead_collected_by == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /teams/{document} {
      allow create: if /databases/$(database)/documents/users/$(request.auth.uid) in request.resource.data.admins;
      allow read: if /databases/$(database)/documents/users/$(request.auth.uid) in resource.data.members;
      allow write: if /databases/$(database)/documents/users/$(request.auth.uid) in resource.data.admins;
      allow delete: if false;
    }

    match /teams/{parent}/team_components/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /{path=**}/team_components/{document} {
      allow read: if true;
    }


    match /teams/{parent}/email_templates/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /{path=**}/email_templates/{document} {
      allow read: if true;
    }


    match /market_place/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /component_content/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }
  }
}
